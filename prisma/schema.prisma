generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  name String
  role String @default("USER")

  playlists Playlist[]

  @@map("users")
}

model Artist {
  id Int @id @default(autoincrement())
  name String
  bio String?
  photoUrl String?

  albums Album[]

  @@map("artists")
}

model Album {
  id Int @id @default(autoincrement())
  title String
  description String?
  releaseDate DateTime
  coverUrl String?
  
  artistId Int
  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)

  playlists Playlist[]

  @@map("albums")
}

model Playlist {
  id Int @id @default(autoincrement())
  name String
  description String?

  userId Int
  user User @relation(fields: [userId], references: [id])

  albums Album[]

  @@map("playlists")
}

